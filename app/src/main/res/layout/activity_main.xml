<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin App"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="8dp"
        android:textSize="20dp"
        android:textColor="#FF1744"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF1744"
        android:layout_marginTop="5dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-- Function Name --"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/spatharaedID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:hint="Enter the Spathara "
                android:gravity="start"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:background="@drawable/round_shape" />

            <TextView
                android:id="@+id/btnfunID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="#fff"
                android:backgroundTint="#FF3D00"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:text="ADD Function"
                android:background="@drawable/btn_sape" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-- Student Name --"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/edstudentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:hint="Enter the Student Name"
                android:gravity="start"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:padding="12dp"
                android:background="@drawable/round_shape" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvstudentlistID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/rv_student_layout"
                tools:itemCount="5" />


            <TextView
                android:id="@+id/btnaddstudentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:text="ADD Student"
                android:background="@drawable/btn_sape" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-- Image Urls --"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/edimageurlid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:hint="Enter the Images"
                android:gravity="start"
                android:layout_margin="2dp"
                android:padding="12dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:background="@drawable/round_shape" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvlistimageID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/rv_student_layout"
                tools:itemCount="5" />


            <TextView
                android:id="@+id/btnAddImageID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:backgroundTint="#FF1744"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:text="ADD Images"
                android:background="@drawable/btn_sape" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-- Summery --"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/edsummeryID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:hint="Enter the Discription"
                android:gravity="start"
                android:layout_margin="2dp"
                android:padding="12dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:background="@drawable/round_shape" />

            <TextView
                android:id="@+id/btndiscpriotnID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:backgroundTint="#D500F9"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:text="ADD Discription"
                android:background="@drawable/btn_sape" />

            <TextView
                android:id="@+id/btnsubmiteID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:backgroundTint="#3D5AFE"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:text="View Report"
                android:background="@drawable/btn_sape" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>